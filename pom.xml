            <pluginRepository>
                <id>spring-snapshots</id>
                <url>https://repo.spring.io/snapshot</url>
            </pluginRepository>
            <pluginRepository>
                <id>spring-milestones</id>
                <url>https://repo.spring.io/milestone</url>
            </pluginRepository>
        </pluginRepositories>-->
    <!-- USED TO CREATE FAT JAR FILE TO BE USED WITH DOCKERFILE WITHOUT BUILD - END-->

    <modules>
        <module>boot</module>
        <module>clients</module>
        <module>configs</module>
        <module>services</module>
        <module>web</module>
    </modules>

</project>
